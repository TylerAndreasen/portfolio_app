<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<%= render "search_form", search_params: @search_params %>

<%# TODO Implement EasyNewStudentButton, displayed when the number of filtered students is more than 2
  <div id="EasyNewStudentButton">
    <% if @students.count > 2 % >
      <%= link_to "New student", new_student_path % >
  </div>
%>


<div id=StudentList>
  <% if @students.count > 0 %>
    <%= "Found "+@students.count.to_s+" Student(s)"%>
    <% @students.each do |student| %>
      <%= render student %>
      <p>
        <%= link_to "Show this student", student %>
      </p>
    <% end %>
  <% else %>
    <p id=NoStudentsFound> No matching students were found. </p>
  <% end %>
</div>

<%= link_to "New student", new_student_path %>